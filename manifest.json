{
    "manifest_version": 2,
    "name": "Project Name Copier",
    "version": "1.1",
    "description": "Copy project name and tasks from the current page",
    "permissions": ["activeTab", "clipboardWrite"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_title": "Copy Project Name and Tasks"
    }
  }